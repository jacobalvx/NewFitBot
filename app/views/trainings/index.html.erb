<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>List of Trainings</h1><span class="pull-right"> <%= link_to "Back", trainer_path(current_user.id), class:'btn btn-danger btn-xs' %></span>


<%=@trainer.name%>
		<ul class="well">
			<% @trainings.each do |training|%>
				<li><a  data-toggle="collapse" href="#collapse<%= training.id %>" aria-expanded="false" aria-controls="collapseExample"><%= training.name %></a>
				</li>
					<div class="collapse" id="collapse<%= training.id %>">
					  <div class="well">
						<p><%= training.name%></p>
						<p><%= training.description%></p>
						<p><%= training.day%></p>
						<a href="<%= trainer_training_path(current_user.id,training.id) %>" class="btn btn-primary btn-block">Ver Training</a>
					  </div>
					</div>
			<%end%>
		</ul>
	</div>
</div>
